# 币安API配置
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_API_URL=https://api.binance.com

# 数据库配置
DATABASE_URL=mysql://username:password@localhost:3306/arbitrage

# 套利配置
# 最小利润百分比
MIN_PROFIT_PERCENTAGE=0.1
# 最大交易金额(USDT)
MAX_TRADE_AMOUNT=100.0
# 价格差异阈值(%)
PRICE_DIFF_THRESHOLD=0.05
# 检查间隔(毫秒)
CHECK_INTERVAL_MS=1000
# 基础资产
BASE_ASSET=BTC

# 交易策略配置
# 启用的策略 (simple,twap,depth,slippage,trend)
ENABLED_STRATEGIES=simple,slippage

# 风控机制配置
# 启用的风控 (loss-limit,abnormal-price,exposure,time-window,frequency,blacklist)
ENABLED_RISK_CONTROLLERS=loss-limit,abnormal-price

# 套利历史记录配置
# 是否记录历史
RECORD_HISTORY=true
# 数据库保留历史天数
HISTORY_RETENTION_DAYS=90
